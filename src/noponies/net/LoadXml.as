/*SIMPLE XML PARSING CLASS*/package noponies.net{	import flash.events.*;	import flash.net.URLRequest;	import flash.net.URLLoader;		/**	* @private	*/	public class LoadXml extends EventDispatcher {		private var myXML:XML;		private var myXLoader:URLLoader;		private var myXMLURL:URLRequest;		private var XML_URL:String;				//--------------------------------------		// GETTERS/SETTERS		//--------------------------------------		/**		 *	Get loaded XML Data		 *	@return XML		 */		public function get loadedXML():XML{			return myXML!=null?myXML:null;		}		public function LoadXml(url:String) {			XML_URL = url;			myXMLURL = new URLRequest(XML_URL);			myXLoader = new URLLoader(myXMLURL);			myXLoader.addEventListener(Event.COMPLETE, completeHandler);			myXLoader.addEventListener(IOErrorEvent.IO_ERROR, handleError);		}		private function completeHandler(event:Event):void {			myXML = XML(event.target.data);			dispatchEvent(event);		}		private function handleError(event:IOErrorEvent):void {			trace("Error loading XML");		}	}}