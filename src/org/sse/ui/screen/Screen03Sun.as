package org.sse.ui.screen{		import be.colorfield.ui.screen.IScreen;	import be.colorfield.ui.screen.ScreenAbstract;		import org.sse.solarsystem.PlanetsPerspective;	import org.sse.solarsystem.SunPerlinNoise;	import org.sse.ui.container.TabbedPanel;	/**	 * ECRAN affichant une animation réalisée avec l'algortithme de Perlin mappé	 * sur une sphère. On superpose à cela une panneau à onglet didactique comportant	 * des textes expliquant les réactions de fusion du Soleil.	 */	public class Screen03Sun extends ScreenAbstract implements IScreen	{		private static const SUN_COLOR:int = 0xff6600;		private var tabbedPanel_mc:TabbedPanel;				public function Screen03Sun()		{					}				/**		 * Création des éléments et de leurs options d'affichage		 */		override public function buildElements():void		{			// ============================================== perlin noise						// var sunLife:SunLife = new SunLife(); // Plus tard, vie et mort des étoiles (réactions de fusion)			// ici on simplifie			var sunPerlin:SunPerlinNoise = new SunPerlinNoise();			//var testOptions:Object = {x:0.5,y:0.5,offSetY:test.height/2,offSetX:test.width/2};			var spOptions:Object = {x:0,y:0,offSetY:60};						addElement(sunPerlin,spOptions);						// ============================================== tabbed panels			var nbrPanels:int = 3;			tabbedPanel_mc = new TabbedPanel();						// attention, offset nécessaire car le point d'enregistrement original du tabbed panel 			// n'est pas au centre, mais top left						var tpOptions:Object = {x:1, y:0.45, offSetX:-TabbedPanel.PANEL_WIDTH - 120,offSetY:-170};			addElement(tabbedPanel_mc, tpOptions);						// titres			var titles:Array = new Array();			titles.push("Le Soleil");			titles.push("Structure");			titles.push("Noyau");				titles.push("Atmosphère");			tabbedPanel_mc.setTitles(titles);						// SunContentX = clips définits dans l'environnement graphique de Flash			var tabbedPanelContent:Array = new Array();			tabbedPanelContent.push(new SunContent1());			tabbedPanelContent.push(new SunContent2());			tabbedPanelContent.push(new SunContent3());			tabbedPanelContent.push(new SunContent4());						tabbedPanel_mc.setClips(tabbedPanelContent);						// couleur			tabbedPanel_mc.setActiveColor(SUN_COLOR);						// initialise ici une fois qu'on a le contenu			tabbedPanel_mc.init();					}				override public function postDisplayOperations():void{								}									}}